{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/Mearman/SPIRAL/refs/heads/main/eir.schema.json",
  "title": "EIR (Execution IR)",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.]+)?$"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "functionSigs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "ns": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "params": {
            "type": "array",
            "items": {
              "$ref": "spiral.schema.json#/$defs/Type"
            }
          },
          "returns": {
            "$ref": "spiral.schema.json#/$defs/Type"
          },
          "pure": {
            "type": "boolean"
          }
        },
        "required": [
          "ns",
          "name",
          "params",
          "returns",
          "pure"
        ],
        "additionalProperties": false
      }
    },
    "airDefs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "ns": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "params": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "result": {
            "$ref": "spiral.schema.json#/$defs/Type"
          },
          "body": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "kind": {
                    "type": "string",
                    "const": "lit"
                  },
                  "type": {
                    "$ref": "spiral.schema.json#/$defs/Type"
                  },
                  "value": {}
                },
                "required": [
                  "kind",
                  "type",
                  "value"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "kind": {
                    "type": "string",
                    "const": "ref"
                  },
                  "id": {
                    "type": "string"
                  }
                },
                "required": [
                  "kind",
                  "id"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "kind": {
                    "type": "string",
                    "const": "var"
                  },
                  "name": {
                    "type": "string"
                  }
                },
                "required": [
                  "kind",
                  "name"
                ],
                "additionalProperties": false
              },
              {
                "$ref": "spiral.schema.json#/$defs/CallExpr"
              },
              {
                "type": "object",
                "properties": {
                  "kind": {
                    "type": "string",
                    "const": "if"
                  },
                  "cond": {
                    "anyOf": [
                      {
                        "type": "string"
                      },
                      {
                        "$ref": "spiral.schema.json#/$defs/Expr"
                      }
                    ]
                  },
                  "then": {
                    "anyOf": [
                      {
                        "type": "string"
                      },
                      {
                        "$ref": "spiral.schema.json#/$defs/Expr"
                      }
                    ]
                  },
                  "else": {
                    "anyOf": [
                      {
                        "type": "string"
                      },
                      {
                        "$ref": "spiral.schema.json#/$defs/Expr"
                      }
                    ]
                  },
                  "type": {
                    "$ref": "spiral.schema.json#/$defs/Type"
                  }
                },
                "required": [
                  "kind",
                  "cond",
                  "then",
                  "else"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "kind": {
                    "type": "string",
                    "const": "let"
                  },
                  "name": {
                    "type": "string"
                  },
                  "value": {
                    "anyOf": [
                      {
                        "type": "string"
                      },
                      {
                        "$ref": "spiral.schema.json#/$defs/Expr"
                      }
                    ]
                  },
                  "body": {
                    "anyOf": [
                      {
                        "type": "string"
                      },
                      {
                        "$ref": "spiral.schema.json#/$defs/Expr"
                      }
                    ]
                  },
                  "type": {
                    "$ref": "spiral.schema.json#/$defs/Type"
                  }
                },
                "required": [
                  "kind",
                  "name",
                  "value",
                  "body"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "kind": {
                    "type": "string",
                    "const": "airRef"
                  },
                  "ns": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "args": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "required": [
                  "kind",
                  "ns",
                  "name",
                  "args"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "kind": {
                    "type": "string",
                    "const": "predicate"
                  },
                  "name": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                },
                "required": [
                  "kind",
                  "name",
                  "value"
                ],
                "additionalProperties": false
              }
            ]
          }
        },
        "required": [
          "ns",
          "name",
          "params",
          "result",
          "body"
        ],
        "additionalProperties": false
      }
    },
    "nodes": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "type": {
                "$ref": "spiral.schema.json#/$defs/Type"
              },
              "expr": {
                "$ref": "spiral.schema.json#/$defs/EirExpr"
              }
            },
            "required": [
              "id",
              "expr"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "type": {
                "$ref": "spiral.schema.json#/$defs/Type"
              },
              "blocks": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "instructions": {
                      "type": "array",
                      "items": {
                        "anyOf": [
                          {
                            "anyOf": [
                              {
                                "type": "object",
                                "properties": {
                                  "kind": {
                                    "type": "string",
                                    "const": "assign"
                                  },
                                  "target": {
                                    "type": "string"
                                  },
                                  "value": {
                                    "$ref": "spiral.schema.json#/$defs/EirExpr"
                                  }
                                },
                                "required": [
                                  "kind",
                                  "target",
                                  "value"
                                ],
                                "additionalProperties": false
                              },
                              {
                                "type": "object",
                                "properties": {
                                  "kind": {
                                    "type": "string",
                                    "const": "op"
                                  },
                                  "target": {
                                    "type": "string"
                                  },
                                  "ns": {
                                    "type": "string"
                                  },
                                  "name": {
                                    "type": "string"
                                  },
                                  "args": {
                                    "type": "array",
                                    "items": {
                                      "type": "string"
                                    }
                                  }
                                },
                                "required": [
                                  "kind",
                                  "target",
                                  "ns",
                                  "name",
                                  "args"
                                ],
                                "additionalProperties": false
                              },
                              {
                                "type": "object",
                                "properties": {
                                  "kind": {
                                    "type": "string",
                                    "const": "phi"
                                  },
                                  "target": {
                                    "type": "string"
                                  },
                                  "sources": {
                                    "type": "array",
                                    "items": {
                                      "type": "object",
                                      "properties": {
                                        "block": {
                                          "type": "string"
                                        },
                                        "id": {
                                          "type": "string"
                                        }
                                      },
                                      "required": [
                                        "block",
                                        "id"
                                      ],
                                      "additionalProperties": false
                                    }
                                  }
                                },
                                "required": [
                                  "kind",
                                  "target",
                                  "sources"
                                ],
                                "additionalProperties": false
                              },
                              {
                                "type": "object",
                                "properties": {
                                  "kind": {
                                    "type": "string",
                                    "const": "effect"
                                  },
                                  "target": {
                                    "type": "string"
                                  },
                                  "op": {
                                    "type": "string"
                                  },
                                  "args": {
                                    "type": "array",
                                    "items": {
                                      "type": "string"
                                    }
                                  }
                                },
                                "required": [
                                  "kind",
                                  "target",
                                  "op",
                                  "args"
                                ],
                                "additionalProperties": false
                              },
                              {
                                "type": "object",
                                "properties": {
                                  "kind": {
                                    "type": "string",
                                    "const": "assignRef"
                                  },
                                  "target": {
                                    "type": "string"
                                  },
                                  "value": {
                                    "type": "string"
                                  }
                                },
                                "required": [
                                  "kind",
                                  "target",
                                  "value"
                                ],
                                "additionalProperties": false
                              }
                            ]
                          },
                          {
                            "type": "object",
                            "properties": {
                              "kind": {
                                "type": "string",
                                "const": "spawn"
                              },
                              "target": {
                                "type": "string"
                              },
                              "entry": {
                                "type": "string"
                              },
                              "args": {
                                "type": "array",
                                "items": {
                                  "type": "string"
                                }
                              }
                            },
                            "required": [
                              "kind",
                              "target",
                              "entry"
                            ],
                            "additionalProperties": false
                          },
                          {
                            "type": "object",
                            "properties": {
                              "kind": {
                                "type": "string",
                                "const": "channelOp"
                              },
                              "op": {
                                "type": "string",
                                "enum": [
                                  "send",
                                  "recv",
                                  "trySend",
                                  "tryRecv"
                                ]
                              },
                              "target": {
                                "type": "string"
                              },
                              "channel": {
                                "type": "string"
                              },
                              "value": {
                                "type": "string"
                              }
                            },
                            "required": [
                              "kind",
                              "op",
                              "channel"
                            ],
                            "additionalProperties": false
                          },
                          {
                            "type": "object",
                            "properties": {
                              "kind": {
                                "type": "string",
                                "const": "await"
                              },
                              "target": {
                                "type": "string"
                              },
                              "future": {
                                "type": "string"
                              }
                            },
                            "required": [
                              "kind",
                              "target",
                              "future"
                            ],
                            "additionalProperties": false
                          }
                        ]
                      }
                    },
                    "terminator": {
                      "anyOf": [
                        {
                          "type": "object",
                          "properties": {
                            "kind": {
                              "type": "string",
                              "const": "jump"
                            },
                            "to": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "kind",
                            "to"
                          ],
                          "additionalProperties": false
                        },
                        {
                          "type": "object",
                          "properties": {
                            "kind": {
                              "type": "string",
                              "const": "branch"
                            },
                            "cond": {
                              "type": "string"
                            },
                            "then": {
                              "type": "string"
                            },
                            "else": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "kind",
                            "cond",
                            "then",
                            "else"
                          ],
                          "additionalProperties": false
                        },
                        {
                          "type": "object",
                          "properties": {
                            "kind": {
                              "type": "string",
                              "const": "return"
                            },
                            "value": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "kind"
                          ],
                          "additionalProperties": false
                        },
                        {
                          "type": "object",
                          "properties": {
                            "kind": {
                              "type": "string",
                              "const": "exit"
                            },
                            "code": {
                              "anyOf": [
                                {
                                  "type": "string"
                                },
                                {
                                  "type": "number"
                                }
                              ]
                            }
                          },
                          "required": [
                            "kind"
                          ],
                          "additionalProperties": false
                        },
                        {
                          "type": "object",
                          "properties": {
                            "kind": {
                              "type": "string",
                              "const": "fork"
                            },
                            "branches": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "block": {
                                    "type": "string"
                                  },
                                  "taskId": {
                                    "type": "string"
                                  }
                                },
                                "required": [
                                  "block",
                                  "taskId"
                                ],
                                "additionalProperties": false
                              }
                            },
                            "continuation": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "kind",
                            "branches",
                            "continuation"
                          ],
                          "additionalProperties": false
                        },
                        {
                          "type": "object",
                          "properties": {
                            "kind": {
                              "type": "string",
                              "const": "join"
                            },
                            "tasks": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            },
                            "results": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            },
                            "to": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "kind",
                            "tasks",
                            "to"
                          ],
                          "additionalProperties": false
                        },
                        {
                          "type": "object",
                          "properties": {
                            "kind": {
                              "type": "string",
                              "const": "suspend"
                            },
                            "future": {
                              "type": "string"
                            },
                            "resumeBlock": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "kind",
                            "future",
                            "resumeBlock"
                          ],
                          "additionalProperties": false
                        }
                      ]
                    }
                  },
                  "required": [
                    "id",
                    "instructions",
                    "terminator"
                  ],
                  "additionalProperties": false
                }
              },
              "entry": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "blocks",
              "entry"
            ],
            "additionalProperties": false
          }
        ]
      }
    },
    "result": {
      "type": "string"
    }
  },
  "required": [
    "version",
    "nodes",
    "result"
  ],
  "additionalProperties": false,
  "description": "EIRDocument"
}
