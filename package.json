{
	"name": "spiral",
	"version": "0.1.0",
	"description": "SPIRAL: Stratified Progressive Intermediate Representation Architecture Language",
	"repository": {
		"type": "git",
		"url": "https://github.com/Mearman/SPIRAL.git"
	},
	"type": "module",
	"exports": {
		".": "./dist/index.js",
		"./schemas": "./dist/schemas.js"
	},
	"scripts": {
		"build": "tsgo && npm run build:stdlib",
		"build:stdlib": "mkdir -p dist/stdlib && cp src/stdlib/*.cir.json dist/stdlib/",
		"ci": "npm run lint && npm run test:types && npm run test",
		"examples": "node examples/cli.ts",
		"examples:help": "node examples/cli.ts --help",
		"examples:list": "node examples/cli.ts --list",
		"examples:validate": "node examples/cli.ts --validate",
		"generate:schemas": "node scripts/generate-schemas.ts",
		"lint": "eslint --cache . && tsgo --noEmit",
		"lint:fix": "eslint . --fix",
		"prepare": "husky",
		"run-example": "node examples/cli.ts",
		"test": "node --test test/*.test.ts test/*/*.test.ts",
		"test:coverage": "c8 node --test test/*.test.ts test/*/*.test.ts",
		"test:coverage:html": "c8 --reporter=html --reporter=text node --test test/*.test.ts test/*/*.test.ts",
		"test:coverage:open": "c8 --reporter=html --reporter=text node --test test/*.test.ts test/*/*.test.ts && open coverage/index.html",
		"test:seq": "for f in test/async-*.test.ts test/lir-async.test.ts test/scheduler.test.ts; do echo \"Running $f...\"; node --test \"$f\" || exit 1; done",
		"test:types": "tsgo --noEmit",
		"typecheck": "tsgo --noEmit"
	},
	"dependencies": {
		"typescript": "5.9.3",
		"zod": "4.3.6"
	},
	"devDependencies": {
		"@commitlint/cli": "20.3.1",
		"@commitlint/config-conventional": "20.3.1",
		"@eslint/js": "9.39.2",
		"@eslint/markdown": "7.5.1",
		"@types/node": "25.0.10",
		"@typescript/native-preview": "7.0.0-dev.20260204.1",
		"c8": "10.1.3",
		"eslint": "9.39.2",
		"eslint-plugin-jsonc": "2.21.0",
		"globals": "17.1.0",
		"husky": "9.1.7",
		"jiti": "2.6.1",
		"lint-staged": "16.2.7",
		"tsx": "4.21.0",
		"typescript-eslint": "8.53.1"
	},
	"engines": {
		"node": ">=25.6.0"
	},
	"files": [
		"dist",
		"src"
	],
	"packageManager": "npm@11.2.0",
	"c8": {
		"all": true,
		"branches": 0,
		"check-coverage": false,
		"exclude": [
			"src/**/*.test.ts",
			"src/**/*.spec.ts",
			"src/types.ts",
			"dist/**",
			"node_modules/**",
			"coverage/**",
			"examples/**",
			"test/**",
			"scripts/**",
			"**/*.d.ts"
		],
		"extension": [
			".ts"
		],
		"functions": 0,
		"include": [
			"src/**/*.ts"
		],
		"lines": 0,
		"reporter": [
			"text",
			"text-summary"
		],
		"reports-directory": "./coverage",
		"src": [
			"src"
		],
		"statements": 0,
		"temp-directory": "./coverage/tmp"
	},
	"lint-staged": {
		"*.json": [
			"eslint --fix --cache"
		],
		"*.md": [
			"eslint --fix --cache"
		],
		"*.ts": [
			"eslint --fix --cache"
		],
		"eslint.config.ts": [
			"eslint --fix --cache"
		]
	}
}
